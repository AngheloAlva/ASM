---
import { cn } from "@/lib/utils"

interface Props {
	text: string
	className?: string
}

const { text, className } = Astro.props
---

<button
	class={cn(
		"group fade-in relative inline-flex h-12 items-center justify-center overflow-hidden rounded-md bg-asm-gray px-6 font-medium text-white",
		className
	)}
>
	<span>{text}</span>

	<div
		class="absolute inset-0 flex h-full w-full justify-center [transform:skew(-12deg)_translateX(-100%)] group-hover:duration-1000 group-hover:[transform:skew(-12deg)_translateX(100%)]"
	>
		<div class="relative h-full w-8 bg-white/20"></div>
	</div>
</button>
