---
import { getLangFromUrl, useTranslations } from "@/i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const currentYear = new Date().getFullYear()
---

<footer class="bg-asm-blue text-white">
	<div class="max-w-screen-xl mx-auto py-10">
		<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
			<div>
				<h4 class="mb-4 text-xl font-bold">ASM SPA</h4>
				<p class="mb-4 text-white/80">{t("about.description")}</p>
			</div>

			<div>
				<h4 class="mb-4 text-xl font-bold">{t("nav.services")}</h4>
				<ul class="space-y-2">
					<li>
						<a href="#services" class="text-white/80 transition-colors hover:text-white">
							{t("services.general.title")}
						</a>
					</li>
					<li>
						<a href="#services" class="text-white/80 transition-colors hover:text-white">
							{t("services.height.title")}
						</a>
					</li>
					<li>
						<a href="#services" class="text-white/80 transition-colors hover:text-white">
							{t("services.electrical.title")}
						</a>
					</li>
					<li>
						<a href="#services" class="text-white/80 transition-colors hover:text-white">
							{t("services.pumps.title")}
						</a>
					</li>
				</ul>
			</div>

			<div>
				<h4 class="mb-4 text-xl font-bold">{t("contact.title")}</h4>
				<p class="mb-2 text-white/80">{t("contact.info.manager")}</p>
				<p class="mb-2 text-white/80">
					<a href={`mailto:${t("contact.info.email")}`} class="hover:text-white">
						{t("contact.info.email")}
					</a>
				</p>
				<p class="text-white/80">
					<a href={`tel:${t("contact.info.phone")}`} class="hover:text-white">
						{t("contact.info.phone")}
					</a>
				</p>
			</div>
		</div>

		<div class="mt-12 border-t border-white/20 pt-6 text-center text-white/60">
			<p>
				&copy; {currentYear} ASM SPA. {t("footer.rights")}.
			</p>
			<p class="mt-2 text-sm font-medium italic">{t("footer.slogan")}</p>
		</div>
	</div>
</footer>
